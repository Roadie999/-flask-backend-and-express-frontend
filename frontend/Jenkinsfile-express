pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/Roadie999/-flask-backend-and-express-frontend.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    npm install
                '''
            }
        }

        stage('Restart Express App') {
            steps {
                sh '''
                    pm2 restart express-app || pm2 start server.js --name express-app
                '''
            }
        }
    }
}
