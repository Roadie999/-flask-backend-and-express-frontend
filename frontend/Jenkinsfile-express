pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/Roadie999/-flask-backend-and-express-frontend.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    sh '''
                        npm install
                    '''
                }
            }
        }

        stage('Restart Express App') {
            steps {
                dir('frontend') {
                    sh '''
                        npx pm2 restart express-app || npx pm2 start app.js --name express-app
                    '''
                }
            }
        }
    }
}
