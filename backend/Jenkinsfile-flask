pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/Roadie999/-flask-backend-and-express-frontend.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('backend') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install --no-cache-dir -r requirements.txt
                    '''
                }
            }
        }

        stage('Restart Flask App') {
            steps {
                dir('backend') {
                    sh '''
                        . venv/bin/activate
                        pm2 restart flask-app || pm2 start app.py --name flask-app
                    '''
                }
            }
        }
    }
}
